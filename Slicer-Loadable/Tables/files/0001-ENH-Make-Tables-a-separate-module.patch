Date: Tue, 8 Oct 2019 06:45:18 +0200
Subject: [PATCH] ENH: Make Tables a separate module

---
 Modules/Loadable/Tables/CMakeLists.txt        | 24 ++++++++++++++++++-
 Modules/Loadable/Tables/Logic/CMakeLists.txt  |  6 +++++
 .../SubjectHierarchyPlugins/CMakeLists.txt    | 12 ++++++++++
 .../Loadable/Tables/Widgets/CMakeLists.txt    |  6 +++++
 4 files changed, 47 insertions(+), 1 deletion(-)

diff --git a/Modules/Loadable/Tables/CMakeLists.txt b/Modules/Loadable/Tables/CMakeLists.txt
index f585e290a..e35e48c88 100644
--- a/Modules/Loadable/Tables/CMakeLists.txt
+++ b/Modules/Loadable/Tables/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(Tables)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Tables)
@@ -21,7 +37,7 @@ set(MODULE_INCLUDE_DIRECTORIES
   ${CMAKE_CURRENT_BINARY_DIR}/Widgets
   ${CMAKE_CURRENT_SOURCE_DIR}/SubjectHierarchyPlugins
   ${CMAKE_CURRENT_BINARY_DIR}/SubjectHierarchyPlugins
-  ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
   )
 
 set(MODULE_SRCS
@@ -54,6 +70,12 @@ set(MODULE_RESOURCES
   Resources/qSlicer${MODULE_NAME}Module.qrc
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+)
+
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/Tables/Logic/CMakeLists.txt b/Modules/Loadable/Tables/Logic/CMakeLists.txt
index d6f0ceed8..e2d332b46 100644
--- a/Modules/Loadable/Tables/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Tables/Logic/CMakeLists.txt
@@ -14,8 +14,14 @@ set(${KIT}_SRCS
 
 set(${KIT}_TARGET_LIBRARIES
   ${ITK_LIBRARIES}
+  MRMLCore
+  MRMLLogic
+  SlicerBaseLogic
+  Qt5::Widgets
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
diff --git a/Modules/Loadable/Tables/SubjectHierarchyPlugins/CMakeLists.txt b/Modules/Loadable/Tables/SubjectHierarchyPlugins/CMakeLists.txt
index 205b0d546..b7b856bb8 100644
--- a/Modules/Loadable/Tables/SubjectHierarchyPlugins/CMakeLists.txt
+++ b/Modules/Loadable/Tables/SubjectHierarchyPlugins/CMakeLists.txt
@@ -5,6 +5,10 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_${MODULE_NAME_UPPER}_SUBJECT_HIERARCHY_PLUGINS_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
+  ${Slicer_Libs_INCLUDE_DIRS}
+  ${Slicer_Base_INCLUDE_DIRS}
+  ${Qt5Xml_INCLUDE_DIRS}
   ${vtkSlicerTablesModuleLogic_INCLUDE_DIRS}
   ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
   ${vtkSlicerSubjectHierarchyModuleLogic_INCLUDE_DIRS}
@@ -38,8 +42,16 @@ set(${KIT}_TARGET_LIBRARIES
   qMRMLWidgets
   MRMLLogic
   MRMLCore
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  ${CTK_LIBRARIES}
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+)
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleQtLibrary(
   NAME ${KIT}
diff --git a/Modules/Loadable/Tables/Widgets/CMakeLists.txt b/Modules/Loadable/Tables/Widgets/CMakeLists.txt
index 0f5fd5ab5..de5500d63 100644
--- a/Modules/Loadable/Tables/Widgets/CMakeLists.txt
+++ b/Modules/Loadable/Tables/Widgets/CMakeLists.txt
@@ -27,8 +27,14 @@ set(${KIT}_RESOURCES
 
 set(${KIT}_TARGET_LIBRARIES
   vtkSlicer${MODULE_NAME}ModuleLogic
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  qMRMLWidgets
+  ${CTK_LIBRARIES}
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleWidgets(
   NAME ${KIT}
