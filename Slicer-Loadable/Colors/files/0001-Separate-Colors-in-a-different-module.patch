From: Rafael Palomar <rafael.palomar@rr-research.no>
Date: Fri, 4 Oct 2019 21:10:35 +0200
Subject: [PATCH] Separate Colors in a different module

---
 Modules/Loadable/Colors/CMakeLists.txt        | 23 +++++++++++++++++++
 Modules/Loadable/Colors/Logic/CMakeLists.txt  |  3 +++
 .../Loadable/Colors/VTKWidgets/CMakeLists.txt |  1 +
 3 files changed, 27 insertions(+)

diff --git a/Modules/Loadable/Colors/CMakeLists.txt b/Modules/Loadable/Colors/CMakeLists.txt
index 7932d3799..471a55ae2 100644
--- a/Modules/Loadable/Colors/CMakeLists.txt
+++ b/Modules/Loadable/Colors/CMakeLists.txt
@@ -1,3 +1,21 @@
+project(Colors)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
+
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Colors)
@@ -16,6 +34,7 @@ set(MODULE_EXPORT_DIRECTIVE "Q_SLICER_QTMODULES_${MODULE_NAME_UPPER}_EXPORT")
 set(MODULE_INCLUDE_DIRECTORIES
   ${CMAKE_CURRENT_SOURCE_DIR}/Logic
   ${CMAKE_CURRENT_BINARY_DIR}/Logic
+  ${Qt5Xml_INCLUDE_DIRS}
   )
 
 set(MODULE_SRCS
@@ -40,6 +59,10 @@ set(MODULE_UI_SRCS
 set(MODULE_TARGET_LIBRARIES
   vtkSlicer${MODULE_NAME}ModuleVTKWidgets
   vtkSlicer${MODULE_NAME}ModuleLogic
+  qSlicerBaseQTCore
+  qSlicerBaseQTGUI
+  ${CTK_LIBRARIES}
+  qMRMLWidgets
   )
 
 set(MODULE_RESOURCES
diff --git a/Modules/Loadable/Colors/Logic/CMakeLists.txt b/Modules/Loadable/Colors/Logic/CMakeLists.txt
index 64b3e0a38..a22d10b81 100644
--- a/Modules/Loadable/Colors/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Colors/Logic/CMakeLists.txt
@@ -13,6 +13,9 @@ set(${KIT}_SRCS
   )
 
 set(${KIT}_TARGET_LIBRARIES
+  ${VTK_LIBRARIES}
+  MRMLLogic
+  MRMLCore
   )
 
 #-----------------------------------------------------------------------------
diff --git a/Modules/Loadable/Colors/VTKWidgets/CMakeLists.txt b/Modules/Loadable/Colors/VTKWidgets/CMakeLists.txt
index 50b06726e..2386c4c04 100644
--- a/Modules/Loadable/Colors/VTKWidgets/CMakeLists.txt
+++ b/Modules/Loadable/Colors/VTKWidgets/CMakeLists.txt
@@ -13,6 +13,7 @@ set(${KIT}_SRCS
   )
 
 set(${KIT}_TARGET_LIBRARIES
+  ${VTK_LIBRARIES}
   )
 
 #-----------------------------------------------------------------------------
