From 66edda7eb5e0c946333cdaeaac896d46bfd6768f Mon Sep 17 00:00:00 2001
From: Rafael Palomar <rafael.palomar@rr-research.no>
Date: Sun, 19 Jan 2020 13:06:46 +0100
Subject: [PATCH] ENH: Make Reformat a separate module

---
 Modules/Loadable/Reformat/CMakeLists.txt      | 28 +++++++++++++++++--
 .../Loadable/Reformat/Logic/CMakeLists.txt    |  5 ++++
 2 files changed, 31 insertions(+), 2 deletions(-)

diff --git a/Modules/Loadable/Reformat/CMakeLists.txt b/Modules/Loadable/Reformat/CMakeLists.txt
index 967941042..0404dd89b 100644
--- a/Modules/Loadable/Reformat/CMakeLists.txt
+++ b/Modules/Loadable/Reformat/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(Reformat)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Reformat)
@@ -13,10 +29,11 @@ set(MODULE_EXPORT_DIRECTIVE "Q_SLICER_QTMODULES_${MODULE_NAME_UPPER}_EXPORT")
 
 # Additional includes - Current_{source,binary} and Slicer_{Libs,Base} already included
 set(MODULE_INCLUDE_DIRECTORIES
-  ${CMAKE_CURRENT_SOURCE_DIR}/Widgets
-  ${CMAKE_CURRENT_BINARY_DIR}/Widgets
   ${CMAKE_CURRENT_SOURCE_DIR}/Logic
   ${CMAKE_CURRENT_BINARY_DIR}/Logic
+  ${Qt5Gui_INCLUDE_DIRS}
+  ${Qt5Widgets_INCLUDE_DIRS}
+  ${Slicer_Libs_INCLUDE_DIRS}
   )
 
 set(MODULE_SRCS
@@ -37,12 +54,19 @@ set(MODULE_UI_SRCS
 
 set(MODULE_TARGET_LIBRARIES
   vtkSlicer${MODULE_NAME}ModuleLogic
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  Qt5::Widgets
+  ${CTK_LIBRARIES}
+  qMRMLWidgets
   )
 
 set(MODULE_RESOURCES
   Resources/qSlicer${MODULE_NAME}Module.qrc
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/Reformat/Logic/CMakeLists.txt b/Modules/Loadable/Reformat/Logic/CMakeLists.txt
index d6f0ceed8..9d2f1fb21 100644
--- a/Modules/Loadable/Reformat/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Reformat/Logic/CMakeLists.txt
@@ -14,8 +14,13 @@ set(${KIT}_SRCS
 
 set(${KIT}_TARGET_LIBRARIES
   ${ITK_LIBRARIES}
+  MRMLLogic
+  MRMLCore
+  SlicerBaseLogic
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
