From 2333b083e968451940d038ae0b668cf70a8749c9 Mon Sep 17 00:00:00 2001
From: Rafael Palomar <rafael.palomar@rr-research.no>
Date: Mon, 7 Oct 2019 10:44:08 +0200
Subject: [PATCH] Make Plots a separate module

---
 Modules/Loadable/Plots/CMakeLists.txt         | 23 ++++++++++++++++++-
 Modules/Loadable/Plots/Logic/CMakeLists.txt   | 11 +++++++++
 .../SubjectHierarchyPlugins/CMakeLists.txt    | 13 +++++++----
 Modules/Loadable/Plots/Widgets/CMakeLists.txt |  2 ++
 4 files changed, 43 insertions(+), 6 deletions(-)

diff --git a/Modules/Loadable/Plots/CMakeLists.txt b/Modules/Loadable/Plots/CMakeLists.txt
index ae88facf7..af225bc3e 100644
--- a/Modules/Loadable/Plots/CMakeLists.txt
+++ b/Modules/Loadable/Plots/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(Plots)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Plots)
@@ -21,7 +37,7 @@ set(MODULE_INCLUDE_DIRECTORIES
   ${CMAKE_CURRENT_BINARY_DIR}/Widgets
   ${CMAKE_CURRENT_SOURCE_DIR}/SubjectHierarchyPlugins
   ${CMAKE_CURRENT_BINARY_DIR}/SubjectHierarchyPlugins
-  ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
   )
 
 set(MODULE_SRCS
@@ -51,6 +67,11 @@ set(MODULE_RESOURCES
   Resources/qSlicer${MODULE_NAME}Module.qrc
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+  )
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/Plots/Logic/CMakeLists.txt b/Modules/Loadable/Plots/Logic/CMakeLists.txt
index d6f0ceed8..d6e668d6e 100644
--- a/Modules/Loadable/Plots/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Plots/Logic/CMakeLists.txt
@@ -5,6 +5,9 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "VTK_SLICER_${MODULE_NAME_UPPER}_MODULE_LOGIC_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
+  ${Qt5Gui_INCLUDE_DIRS}
+  ${Qt5Widgets_INCLUDE_DIRS}
+  ${Qt5Xml_INCLUDE_DIRS}
   )
 
 set(${KIT}_SRCS
@@ -14,8 +17,16 @@ set(${KIT}_SRCS
 
 set(${KIT}_TARGET_LIBRARIES
   ${ITK_LIBRARIES}
+  MRMLLogic
+  MRMLCore
+  qMRMLWidgets
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  ${CTK_LIBRARIES}
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
diff --git a/Modules/Loadable/Plots/SubjectHierarchyPlugins/CMakeLists.txt b/Modules/Loadable/Plots/SubjectHierarchyPlugins/CMakeLists.txt
index 2d822f99d..0f7716e47 100644
--- a/Modules/Loadable/Plots/SubjectHierarchyPlugins/CMakeLists.txt
+++ b/Modules/Loadable/Plots/SubjectHierarchyPlugins/CMakeLists.txt
@@ -5,12 +5,10 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_${MODULE_NAME_UPPER}_SUBJECT_HIERARCHY_PLUGINS_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
+  ${Slicer_Libs_INCLUDE_DIRS}
+  ${Slicer_Base_INCLUDE_DIRS}
   ${vtkSlicerPlotsModuleLogic_INCLUDE_DIRS}
-  ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
-  ${vtkSlicerSubjectHierarchyModuleLogic_INCLUDE_DIRS}
-  ${qMRMLWidgets_INCLUDE_DIRS}
-  ${MRMLLogic_INCLUDE_DIRS}
-  ${MRMLCore_INCLUDE_DIRS}
   )
 
 set(${KIT}_SRCS
@@ -40,6 +38,11 @@ set(${KIT}_TARGET_LIBRARIES
   MRMLCore
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+  )
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleQtLibrary(
   NAME ${KIT}
diff --git a/Modules/Loadable/Plots/Widgets/CMakeLists.txt b/Modules/Loadable/Plots/Widgets/CMakeLists.txt
index c56ea83ec..28e59e1dc 100644
--- a/Modules/Loadable/Plots/Widgets/CMakeLists.txt
+++ b/Modules/Loadable/Plots/Widgets/CMakeLists.txt
@@ -37,6 +37,8 @@ set(${KIT}_TARGET_LIBRARIES
   vtkSlicer${MODULE_NAME}ModuleLogic
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleWidgets(
   NAME ${KIT}
