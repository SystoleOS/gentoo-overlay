Subject: [PATCH] Make SceneViews a separate module

---
 Modules/Loadable/SceneViews/CMakeLists.txt    | 26 ++++++++++++++++++-
 .../Loadable/SceneViews/Logic/CMakeLists.txt  |  8 ++++++
 .../SubjectHierarchyPlugins/CMakeLists.txt    | 16 +++++++++---
 3 files changed, 46 insertions(+), 4 deletions(-)

diff --git a/Modules/Loadable/SceneViews/CMakeLists.txt b/Modules/Loadable/SceneViews/CMakeLists.txt
index e51d0e3e7..f8f447efe 100644
--- a/Modules/Loadable/SceneViews/CMakeLists.txt
+++ b/Modules/Loadable/SceneViews/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(SceneViews)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------
 set(MODULE_NAME SceneViews)
@@ -20,7 +36,8 @@ set(MODULE_INCLUDE_DIRECTORIES
   ${CMAKE_CURRENT_BINARY_DIR}/Logic
   ${CMAKE_CURRENT_SOURCE_DIR}/SubjectHierarchyPlugins
   ${CMAKE_CURRENT_BINARY_DIR}/SubjectHierarchyPlugins
-  ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
+  ${Qt5Xml_INCLUDE_DIRS}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
   )
 
 set(GUI_SRCS
@@ -55,6 +72,13 @@ set(MODULE_TARGET_LIBRARIES
   qMRMLWidgets
   vtkSlicer${MODULE_NAME}ModuleLogic
   qSlicer${MODULE_NAME}SubjectHierarchyPlugins
+  qSlicerBaseQTGUI
+  ${CTK_LIBRARIES}
+  )
+
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
   )
 
 #-----------------------------------------------------------------------------
diff --git a/Modules/Loadable/SceneViews/Logic/CMakeLists.txt b/Modules/Loadable/SceneViews/Logic/CMakeLists.txt
index eb3237f81..d40422c1e 100644
--- a/Modules/Loadable/SceneViews/Logic/CMakeLists.txt
+++ b/Modules/Loadable/SceneViews/Logic/CMakeLists.txt
@@ -15,6 +15,14 @@ set(${KIT}_SRCS
   )
 
 set(${KIT}_TARGET_LIBRARIES
+  MRMLLogic
+  MRMLCore
+  ${VTK_LIBRARIES}
+  )
+
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
   )
 
 #-----------------------------------------------------------------------------
diff --git a/Modules/Loadable/SceneViews/SubjectHierarchyPlugins/CMakeLists.txt b/Modules/Loadable/SceneViews/SubjectHierarchyPlugins/CMakeLists.txt
index 0ec7d66e7..1db699334 100644
--- a/Modules/Loadable/SceneViews/SubjectHierarchyPlugins/CMakeLists.txt
+++ b/Modules/Loadable/SceneViews/SubjectHierarchyPlugins/CMakeLists.txt
@@ -5,8 +5,10 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_${MODULE_NAME_UPPER}_SUBJECT_HIERARCHY_PLUGINS_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
-  ${MRMLCore_INCLUDE_DIRS}
-  ${vtkSlicerSubjectHierarchyModuleLogic_INCLUDE_DIRS}
+  ${Slicer_Libs_INCLUDE_DIRS}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
+  ${Qt5Core_INCLUDE_DIRS}
+  ${Qt5Widgets_INCLUDE_DIRS}
   ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
   )
 
@@ -30,7 +32,15 @@ set(${KIT}_RESOURCES
 set(${KIT}_TARGET_LIBRARIES
   vtkSlicerSubjectHierarchyModuleLogic
   qSlicerSubjectHierarchyModuleWidgets
-  ${QT_LIBRARIES}
+  Qt5::Core
+  ${VTK_LIBRARIES}
+  MRMLLogic
+  MRMLCore
+  )
+
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
   )
 
 #-----------------------------------------------------------------------------
