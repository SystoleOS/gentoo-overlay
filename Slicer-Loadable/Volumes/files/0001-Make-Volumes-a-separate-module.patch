From: Rafael Palomar <rafael.palomar@rr-research.no>
Date: Fri, 4 Oct 2019 22:06:34 +0200
Subject: [PATCH] Make Volumes a separate module

---
 Modules/Loadable/Volumes/CMakeLists.txt       | 23 ++++++++++++++++++-
 Modules/Loadable/Volumes/Logic/CMakeLists.txt |  6 +++++
 .../SubjectHierarchyPlugins/CMakeLists.txt    | 17 +++++++++++++-
 .../Loadable/Volumes/Widgets/CMakeLists.txt   |  9 ++++++++
 4 files changed, 53 insertions(+), 2 deletions(-)

diff --git a/Modules/Loadable/Volumes/CMakeLists.txt b/Modules/Loadable/Volumes/CMakeLists.txt
index 4a0f8b398..c697e322f 100644
--- a/Modules/Loadable/Volumes/CMakeLists.txt
+++ b/Modules/Loadable/Volumes/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(Volumes)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Volumes)
@@ -19,7 +35,7 @@ set(MODULE_INCLUDE_DIRECTORIES
   ${CMAKE_CURRENT_BINARY_DIR}/Logic
   ${CMAKE_CURRENT_SOURCE_DIR}/SubjectHierarchyPlugins
   ${CMAKE_CURRENT_BINARY_DIR}/SubjectHierarchyPlugins
-  ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
   ${CMAKE_CURRENT_SOURCE_DIR}/Widgets
   ${CMAKE_CURRENT_BINARY_DIR}/Widgets
   )
@@ -57,6 +73,11 @@ set(MODULE_RESOURCES
   Resources/qSlicer${MODULE_NAME}Module.qrc
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+  )
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/Volumes/Logic/CMakeLists.txt b/Modules/Loadable/Volumes/Logic/CMakeLists.txt
index d6f0ceed8..1665b1d91 100644
--- a/Modules/Loadable/Volumes/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Volumes/Logic/CMakeLists.txt
@@ -14,8 +14,14 @@ set(${KIT}_SRCS
 
 set(${KIT}_TARGET_LIBRARIES
   ${ITK_LIBRARIES}
+  MRMLCore
+  MRMLLogic
+  ${VTK_LIBRARIES}
+  vtkAddon
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
diff --git a/Modules/Loadable/Volumes/SubjectHierarchyPlugins/CMakeLists.txt b/Modules/Loadable/Volumes/SubjectHierarchyPlugins/CMakeLists.txt
index 425e8ad2d..53ef5613a 100644
--- a/Modules/Loadable/Volumes/SubjectHierarchyPlugins/CMakeLists.txt
+++ b/Modules/Loadable/Volumes/SubjectHierarchyPlugins/CMakeLists.txt
@@ -5,11 +5,16 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_${MODULE_NAME_UPPER}_SUBJECT_HIERARCHY_PLUGINS_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
-  ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
   ${vtkSlicerSubjectHierarchyModuleLogic_INCLUDE_DIRS}
+  ${Slicer_Libs_INCLUDE_DIRS}
   ${qMRMLWidgets_INCLUDE_DIRS}
   ${MRMLLogic_INCLUDE_DIRS}
   ${MRMLCore_INCLUDE_DIRS}
+  ${Qt5Core_INCLUDE_DIRS}
+  ${Qt5Widgets_INCLUDE_DIRS}
+  ${Qt5Xml_INCLUDE_DIRS}
+  ${Slicer_Base_INCLUDE_DIRS}
   )
 
 set(${KIT}_SRCS
@@ -41,6 +46,16 @@ set(${KIT}_TARGET_LIBRARIES
   qMRMLWidgets
   MRMLLogic
   MRMLCore
+  Qt5::Core
+  Qt5::Widgets
+  qSlicerBaseQTCore
+  qSlicerBaseQTGUI
+  ${CTK_LIBRARIES}
+  )
+
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
   )
 
 #-----------------------------------------------------------------------------
diff --git a/Modules/Loadable/Volumes/Widgets/CMakeLists.txt b/Modules/Loadable/Volumes/Widgets/CMakeLists.txt
index b238094b3..a83051d0f 100644
--- a/Modules/Loadable/Volumes/Widgets/CMakeLists.txt
+++ b/Modules/Loadable/Volumes/Widgets/CMakeLists.txt
@@ -5,6 +5,7 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_QTMODULES_${MODULE_NAME_UPPER}_WIDGETS_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
+  ${Qt5Widgets_INCLUDE_DIRS}
   )
 
 set(${KIT}_SRCS
@@ -44,8 +45,16 @@ set(${KIT}_RESOURCES
   )
 
 set(${KIT}_TARGET_LIBRARIES
+  Qt5::Widgets
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  MRMLCore
+  qMRMLWidgets
+  ${CTK_LIBRARIES}
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleWidgets(
   NAME ${KIT}
