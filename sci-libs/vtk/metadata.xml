<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="project">
    <email>rafael.palomar@rr-research.no</email>
    <name>Rafael Palomar (The Intervention Centre)</name>
  </maintainer>
  <use>
    <flag name="all_modules">Build all VTK modules.</flag>
    <flag name="aqua">Enable vtk COCOA</flag>
    <flag name="boost">Use the Boost library.</flag>
    <flag name="doc">Install doxygen html documentation.</flag>
    <flag name="examples">Install vtk examples' code.</flag>
    <flag name="ffmpeg">Enable ffmpeg/libav-based audio/video codec support.</flag>
    <flag name="gdal">Use gdal library (geospatial vector formats).</flag>
    <flag name="gl2ps">Enable support for the OpenGL-to-Postscript printing library.</flag>
    <flag name="imaging">Enable Imaging modules.</flag>
    <flag name="logging">Enable logging.</flag>
    <flag name="java">Add support for Java.</flag>
    <flag name="json">Enable JSON support for the modules that support it.</flag>
    <flag name="mpi">Add MPI (Message Passing Interface) layer to the modules that support it.</flag>
    <flag name="odbc">Add ODBC Support (Open DataBase Connectivity) for the modules that support it.</flag>
    <flag name="offscreen">Use an offscreen renderer by default.</flag>
    <flag name="postgres">Add support for the postgresql database for the modules that use it.</flag>
    <flag name="qt5">Add support for the Qt 5 application and UI framework.</flag>
    <flag name="python">Add support for the Python language.</flag>
    <flag name="R">Add support for the R language.</flag>
    <flag name="rendering">Enable Rendering modules.</flag>
    <flag name="tbb">Add TBB support (Thread Building Blocks).</flag>
    <flag name="tcl">Add support for the TCL dynamic language.</flag>
    <flag name="theora">Add Theora Video Compression Codec support for the modules that use it.</flag>
    <flag name="video_cards_nvidia">Build Nvidia specific settings.</flag>
    <flag name="views">Enable Views modules.</flag>
    <flag name="web">Enable Web modules.</flag>
    <flag name="X">Use XOrg for render windows.</flag>
    <flag name="xdmf2">Add support for XDMF (Extensible Data Model Format).</flag>
  </use>
</pkgmetadata>
