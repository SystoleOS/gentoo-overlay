From: Rafael Palomar <rafael.palomar@rr-research.no>
Date: Sat, 5 Oct 2019 12:13:49 +0200
Subject: [PATCH] Make Units a separate module

---
 Modules/Loadable/Units/CMakeLists.txt         | 21 +++++++++++++++++++
 Modules/Loadable/Units/Logic/CMakeLists.txt   |  5 +++++
 Modules/Loadable/Units/Widgets/CMakeLists.txt |  4 ++++
 3 files changed, 30 insertions(+)

diff --git a/Modules/Loadable/Units/CMakeLists.txt b/Modules/Loadable/Units/CMakeLists.txt
index 261ce97c8..1c28d4c64 100644
--- a/Modules/Loadable/Units/CMakeLists.txt
+++ b/Modules/Loadable/Units/CMakeLists.txt
@@ -18,6 +18,23 @@
 #
 ################################################################################
 
+project(Units)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
+
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Units)
 set(MODULE_TITLE ${MODULE_NAME})
@@ -58,11 +75,15 @@ set(MODULE_UI_SRCS
 set(MODULE_TARGET_LIBRARIES
   vtkSlicer${MODULE_NAME}ModuleLogic
   qSlicer${MODULE_NAME}ModuleWidgets
+  qSlicerBaseQTCore
+  qSlicerBaseQTGUI
   )
 
 set(MODULE_RESOURCES
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/Units/Logic/CMakeLists.txt b/Modules/Loadable/Units/Logic/CMakeLists.txt
index 46e6e415a..e65b7f3d5 100644
--- a/Modules/Loadable/Units/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Units/Logic/CMakeLists.txt
@@ -33,8 +33,13 @@ set(${KIT}_SRCS
   )
 
 set(${KIT}_TARGET_LIBRARIES
+  MRMLCore
+  MRMLLogic
+  ${VTK_LIBRARIES}
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
diff --git a/Modules/Loadable/Units/Widgets/CMakeLists.txt b/Modules/Loadable/Units/Widgets/CMakeLists.txt
index 5bc23589d..65da3aa86 100644
--- a/Modules/Loadable/Units/Widgets/CMakeLists.txt
+++ b/Modules/Loadable/Units/Widgets/CMakeLists.txt
@@ -31,8 +31,12 @@ set(${KIT}_RESOURCES
 
 set(${KIT}_TARGET_LIBRARIES
   vtkSlicerUnitsModuleLogic
+  qMRMLWidgets
+  ${CTK_LIBRARIES}
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleWidgets(
   NAME ${KIT}
