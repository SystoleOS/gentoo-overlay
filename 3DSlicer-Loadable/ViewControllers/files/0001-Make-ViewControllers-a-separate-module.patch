From: Rafael Palomar <rafael.palomar@rr-research.no>
Date: Tue, 8 Oct 2019 12:31:07 +0200
Subject: [PATCH] Make ViewControllers a separate module

---
 .../Loadable/ViewControllers/CMakeLists.txt   | 22 +++++++++++++++++++
 .../ViewControllers/Logic/CMakeLists.txt      |  7 ++++++
 2 files changed, 29 insertions(+)

diff --git a/Modules/Loadable/ViewControllers/CMakeLists.txt b/Modules/Loadable/ViewControllers/CMakeLists.txt
index 464d69f55..176576f4e 100644
--- a/Modules/Loadable/ViewControllers/CMakeLists.txt
+++ b/Modules/Loadable/ViewControllers/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(ViewControllers)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME ViewControllers)
@@ -35,12 +51,18 @@ set(MODULE_UI_SRCS
 
 set(MODULE_TARGET_LIBRARIES
   vtkSlicer${MODULE_NAME}ModuleLogic
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  qMRMLWidgets
+  ${CTK_LIBRARIES}
   )
 
 set(MODULE_RESOURCES
   Resources/qSlicer${MODULE_NAME}Module.qrc
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/ViewControllers/Logic/CMakeLists.txt b/Modules/Loadable/ViewControllers/Logic/CMakeLists.txt
index d6f0ceed8..b8eac465d 100644
--- a/Modules/Loadable/ViewControllers/Logic/CMakeLists.txt
+++ b/Modules/Loadable/ViewControllers/Logic/CMakeLists.txt
@@ -14,8 +14,15 @@ set(${KIT}_SRCS
 
 set(${KIT}_TARGET_LIBRARIES
   ${ITK_LIBRARIES}
+  MRMLCore
+  MRMLLogic
+  Qt5::Core
+  Qt5::Widgets
+  Qt5::Xml
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
