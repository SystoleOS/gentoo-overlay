Date: Tue, 8 Oct 2019 07:06:52 +0200
Subject: [PATCH] Make Texts a separate module

---
 Modules/Loadable/Texts/CMakeLists.txt         | 22 +++++++++++++++++++
 Modules/Loadable/Texts/Logic/CMakeLists.txt   |  7 ++++++
 .../SubjectHierarchyPlugins/CMakeLists.txt    | 14 +++++++++++-
 Modules/Loadable/Texts/Widgets/CMakeLists.txt | 10 +++++++++
 4 files changed, 52 insertions(+), 1 deletion(-)

diff --git a/Modules/Loadable/Texts/CMakeLists.txt b/Modules/Loadable/Texts/CMakeLists.txt
index d520f4e5d..f14a862bc 100644
--- a/Modules/Loadable/Texts/CMakeLists.txt
+++ b/Modules/Loadable/Texts/CMakeLists.txt
@@ -1,3 +1,19 @@
+project(Texts)
+
+cmake_minimum_required(VERSION 3.0)
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+find_package(Qt5 COMPONENTS Widgets Network Xml PrintSupport REQUIRED)
+find_package(VTK REQUIRED)
+include(${VTK_USE_FILE})
+
+find_package(CTK REQUIRED)
+include(${CTK_USE_FILE})
+
+find_package(ITK REQUIRED)
+include(${ITK_USE_FILE})
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME Texts)
@@ -20,6 +36,7 @@ set(MODULE_INCLUDE_DIRECTORIES
   ${CMAKE_CURRENT_BINARY_DIR}/Logic
   ${CMAKE_CURRENT_SOURCE_DIR}/Widgets
   ${CMAKE_CURRENT_BINARY_DIR}/Widgets
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
   ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
   ${CMAKE_CURRENT_SOURCE_DIR}/SubjectHierarchyPlugins
   ${CMAKE_CURRENT_BINARY_DIR}/SubjectHierarchyPlugins
@@ -54,6 +71,11 @@ set(MODULE_RESOURCES
   Resources/qSlicer${MODULE_NAME}Module.qrc
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+)
+
 #-----------------------------------------------------------------------------
 slicerMacroBuildLoadableModule(
   NAME ${MODULE_NAME}
diff --git a/Modules/Loadable/Texts/Logic/CMakeLists.txt b/Modules/Loadable/Texts/Logic/CMakeLists.txt
index 7b9920b17..4f3304309 100644
--- a/Modules/Loadable/Texts/Logic/CMakeLists.txt
+++ b/Modules/Loadable/Texts/Logic/CMakeLists.txt
@@ -15,9 +15,16 @@ set(${KIT}_SRCS
 
 set(${KIT}_TARGET_LIBRARIES
   MRMLCore
+  MRMLLogic
+  ${VTK_LIBRARIES}
   vtkSlicerMarkupsModuleMRML
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+)
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleLogic(
   NAME ${KIT}
diff --git a/Modules/Loadable/Texts/SubjectHierarchyPlugins/CMakeLists.txt b/Modules/Loadable/Texts/SubjectHierarchyPlugins/CMakeLists.txt
index 975ea22fe..7b4a847e7 100644
--- a/Modules/Loadable/Texts/SubjectHierarchyPlugins/CMakeLists.txt
+++ b/Modules/Loadable/Texts/SubjectHierarchyPlugins/CMakeLists.txt
@@ -5,6 +5,12 @@ set(KIT ${PROJECT_NAME})
 set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_${MODULE_NAME_UPPER}_SUBJECT_HIERARCHY_PLUGINS_EXPORT")
 
 set(${KIT}_INCLUDE_DIRECTORIES
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/qSlicerSubjectHierarchyModuleWidgets
+  ${Slicer_INSTALL_QTLOADABLEMODULES_INCLUDE_DIR}/vtkSlicerSubjectHierarchyModuleLogic
+  ${Slicer_Libs_INCLUDE_DIRS}
+  ${Slicer_Base_INCLUDE_DIRS}
+  ${Qt5Core_INCLUDE_DIRS}
+  ${Qt5Widgets_INCLUDE_DIRS}
   ${vtkSlicerSubjectHierarchyModuleLogic_INCLUDE_DIRS}
   ${qSlicerSubjectHierarchyModuleWidgets_INCLUDE_DIRS}
   ${MRMLCore_INCLUDE_DIRS}
@@ -35,9 +41,15 @@ set(${KIT}_TARGET_LIBRARIES
   MRMLCore
   MRMLLogic
   qMRMLWidgets
-  ${QT_LIBRARIES}
+  Qt5::Core
+  ${CTK_LIBRARIES}
   )
 
+link_directories(
+  ${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR}
+  ${Slicer_INSTALL_QTLOADABLEMODULES_LIB_DIR}
+)
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleQtLibrary(
   NAME ${KIT}
diff --git a/Modules/Loadable/Texts/Widgets/CMakeLists.txt b/Modules/Loadable/Texts/Widgets/CMakeLists.txt
index bdca2da14..13d0be931 100644
--- a/Modules/Loadable/Texts/Widgets/CMakeLists.txt
+++ b/Modules/Loadable/Texts/Widgets/CMakeLists.txt
@@ -7,6 +7,7 @@ set(${KIT}_EXPORT_DIRECTIVE "Q_SLICER_MODULE_${MODULE_NAME_UPPER}_WIDGETS_EXPORT
 set(${KIT}_INCLUDE_DIRECTORIES
   ${vtkSlicer${MODULE_NAME}ModuleLogic_SOURCE_DIR}
   ${vtkSlicer${MODULE_NAME}ModuleLogic_BINARY_DIR}
+  ${Qt5Widgets_INCLUDE_DIRS}
   )
 
 set(${KIT}_SRCS
@@ -26,8 +27,17 @@ set(${KIT}_RESOURCES
   )
 
 set(${KIT}_TARGET_LIBRARIES
+  MRMLCore
+  Qt5::Widgets
+  qMRMLWidgets
+  qSlicerBaseQTGUI
+  qSlicerBaseQTCore
+  ${VTK_LIBRARIES}
+  ${CTK_LIBRARIES}
   )
 
+link_directories(${Slicer_HOME}/${Slicer_INSTALL_LIB_DIR})
+
 #-----------------------------------------------------------------------------
 SlicerMacroBuildModuleWidgets(
   NAME ${KIT}
